					</StackLayout>
					<Grid
						Grid.Row="2"
						HorizontalOptions="CenterAndExpand"
						VerticalOptions="EndAndExpand">
						<Button
							Margin="30"
							BackgroundColor="#1FFFFFFF"
							Command="{Binding RegisterCommand}"
