						<RowDefinition Height="*" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>
					<StackLayout
						Grid.Row="1"
						Margin="10,0"
						VerticalOptions="Center">
						<Image
							Margin="0,0,0,0"
							HorizontalOptions="Center"
							Source="my_fort.png"
							VerticalOptions="Start"
							WidthRequest="200" />
						<Label
							FontSize="Title"
							HorizontalOptions="Center"
							Text="My Fort"
							TextColor="White" />
						<ctrl:MyEntry
							Icon="md-email"
							Keyboard="Email"
							Placeholder="Email"
							Text="{Binding Email, Mode=TwoWay}" />
						<ctrl:MyEntry
							Icon="md-lock"
							IsPassword="True"
							Keyboard="Numeric"
							Placeholder="Password"
							Text="{Binding Password, Mode=TwoWay}" />
